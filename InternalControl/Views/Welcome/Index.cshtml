@{ ViewData["Title"] = "Welcome!"; }


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- SEO Meta Tags -->
    <meta name="description" content="Create a stylish landing page for your business startup and get leads for the offered services with this HTML landing page template.">
    <meta name="author" content="Inovatik">

    <!-- OG Meta Tags to improve the way the post looks when you share the page on LinkedIn, Facebook, Google+ -->
    <meta property="og:site_name" content="" /> <!-- website name -->
    <meta property="og:site" content="" /> <!-- website link -->
    <meta property="og:title" content="" /> <!-- title shown in the actual shared post -->
    <meta property="og:description" content="" /> <!-- description shown in the actual shared post -->
    <meta property="og:image" content="" /> <!-- image link, make sure it's jpg -->
    <meta property="og:url" content="" /> <!-- where do you want your post to link to -->
    <meta property="og:type" content="article" />

    <!-- Website Title -->
    <title>Evolo - StartUp HTML Landing Page Template</title>

    <!-- Styles -->
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,400i,600,700,700i&amp;subset=latin-ext" rel="stylesheet">
    <link href="~/assets/css/welcome/bootstrap.css" rel="stylesheet">
    <link href="~/assets/css/welcome/fontawesome-all.css" rel="stylesheet">
    <link href="~/assets/css/welcome/swiper.css" rel="stylesheet">
    <link href="~/assets/css/welcome/magnific-popup.css" rel="stylesheet">
    <link href="~/assets/css/welcome/styles.css" rel="stylesheet">

    <!-- Favicon  -->
    <link rel="icon" href="images/favicon.png">
</head>
<body data-spy="scroll" data-target=".fixed-top">

    <!-- Preloader -->
    <div class="spinner-wrapper">
        <div class="spinner">
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
        </div>
    </div>
    <!-- end of preloader -->
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
        <!-- Text Logo - Use this if you don't have a graphic logo -->
        <!-- <a class="navbar-brand logo-text page-scroll" href="index.html">Evolo</a> -->
        <!-- Image Logo -->
        <a class="navbar-brand logo-image" asp-controller="Home" asp-action="Index"><img width="120" src="~/assets/img/images/tognetlogonobg.svg" alt="alternative"></a>


    </nav> <!-- end of navbar -->
    <!-- end of navigation -->


    <!-- Header -->
    <header id="header" class="header">
        <div class="header-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="text-container">
                            <h1>Xoş Gəlmisiniz!</h1>
                            <p class="p-large">ToG Net-də dostlarınız və ətrafınızdakı dünya ilə əlaqə saxlayın.</p>
                            <a class="btn-solid-lg page-scroll" asp-controller="Account" asp-action="Login">Daxil ol</a>
                        </div> <!-- end of text-container -->
                    </div> <!-- end of col -->
                    <div class="col-lg-6">
                        <div class="image-container">
                            <img class="img-fluid" src="~/assets/img/welcome/header-teamwork.svg" alt="alternative">
                        </div> <!-- end of image-container -->
                    </div> <!-- end of col -->
                </div> <!-- end of row -->
            </div> <!-- end of container -->
        </div> <!-- end of header-content -->
    </header> <!-- end of header -->
    <!-- end of header -->
    <!-- Scripts -->
    <script src="~/assets/js/welcome/jquery.min.js"></script> <!-- jQuery for Bootstrap's JavaScript plugins -->
    <script src="~/assets/js/welcome/popper.min.js"></script> <!-- Popper tooltip library for Bootstrap -->
    <script src="~/assets/js/welcome/bootstrap.min.js"></script> <!-- Bootstrap framework -->
    <script src="~/assets/js/welcome/jquery.easing.min.js"></script> <!-- jQuery Easing for smooth scrolling between anchors -->
    <script src="~/assets/js/welcome/swiper.min.js"></script> <!-- Swiper for image and text sliders -->
    <script src="~/assets/js/welcome/jquery.magnific-popup.js"></script> <!-- Magnific Popup for lightboxes -->
    <script src="~/assets/js/welcome/validator.min.js"></script> <!-- Validator.js - Bootstrap plugin that validates forms -->
    <script src="~/assets/js/welcome/scripts.js"></script> <!-- Custom scripts -->
</body>
</html>