@model ForgetPassViewModel
@{
    Layout = null;
}


<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>ToG Net - Şifrəni unutmuşam</title>
    <link rel="icon" type="image/x-icon" href="~/assets/img/images/tognetlogonobg.svg">


    <link href="~/assets/css/logreg/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://kit.fontawesome.com/eb23b2d8dd.css" crossorigin="anonymous">

</head>
<body>

    <div class="spinner-wrapper">
        <div class="spinner">
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
        </div>
    </div>



    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form method="post">
                <h1>Şifrəni unutmuşam</h1>
                <span> </span>
                <input autocomplete="off" required asp-for="Email" placeholder="Email" />
                <button asp-controller="Account" asp-action="ForgetPass" type="submit">Göndər</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form method="post">
                <h1>Şifrəni unutmuşam</h1>
                <span> </span>
                <input autocomplete="off" required asp-for="Email" placeholder="Email" />
                <button asp-controller="Account" asp-action="ForgetPass" type="submit">Göndər</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Salam, Dostum!</h1>
                    <p>Şifrəsini bərpa etmək istədiyiniz hesabın emailini daxil edin. Emailinizə şifrəni yeniləməyiniz üçün bağlantı göndəriləcək!</p>
                    <button class="ghost buttonimportant" id="signIn">Şifrəni unutmuşam</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Salam, Dostum!</h1>
                    <p>Şifrəsini bərpa etmək istədiyiniz hesabın emailini daxil edin. Emailinizə şifrəni yeniləməyiniz üçün bağlantı göndəriləcək!</p>
                    <button class="ghost buttonimportant" id="signUp">Şifrəni unutmuşam</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/assets/js/welcome/jquery.min.js"></script> <!-- jQuery for Bootstrap's JavaScript plugins -->
    <script src="~/assets/js/common/reloader.js"></script>
    <script src="~/assets/js/logreg/script.js"></script>
    <script src="https://kit.fontawesome.com/eb23b2d8dd.js" crossorigin="anonymous"></script>

</body>
</html>